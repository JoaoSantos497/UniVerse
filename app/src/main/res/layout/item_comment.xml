<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingStart="16dp"
    android:paddingEnd="16dp"
    android:paddingTop="12dp"
    android:paddingBottom="4dp"
    android:background="?android:attr/colorBackground">

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/commentProfileImage"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/ic_person_filled"
        android:scaleType="centerCrop"
        app:shapeAppearanceOverlay="@style/ShapeAppearance.MaterialComponents.MediumComponent"
        app:cornerSize="50%"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/headerContainer"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginStart="12dp"
        android:gravity="center_vertical"
        app:layout_constraintStart_toEndOf="@id/commentProfileImage"
        app:layout_constraintEnd_toStartOf="@id/btnMoreOptionsComment"
        app:layout_constraintTop_toTopOf="@id/commentProfileImage">

        <TextView
            android:id="@+id/commentUser"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="Nome do Aluno"
            android:textStyle="bold"
            android:textSize="14sp"
            android:textColor="?android:attr/textColorPrimary"/>

        <TextView
            android:id="@+id/commentDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="2 min"
            android:textSize="12sp"
            android:textColor="?android:attr/textColorSecondary"
            android:layout_marginStart="8dp"/>
    </LinearLayout>

    <ImageButton
        android:id="@+id/btnMoreOptionsComment"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:src="@drawable/ic_more_vert"
        android:background="?attr/selectableItemBackgroundBorderless"
        app:tint="?android:attr/textColorSecondary"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/commentContent"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        tools:text="Este é um exemplo de comentário."
        android:textSize="15sp"
        android:textColor="?android:attr/textColorPrimary"
        android:layout_marginTop="2dp"
        android:lineSpacingMultiplier="1.1"
        app:layout_constraintStart_toStartOf="@id/headerContainer"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/headerContainer" />

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cardCommentImage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        app:cardCornerRadius="12dp"
        app:cardElevation="0dp"
        app:strokeWidth="0dp"
        app:layout_constraintStart_toStartOf="@id/headerContainer"
        app:layout_constraintTop_toBottomOf="@id/commentContent">

        <ImageView
            android:id="@+id/commentAttachedImage"
            android:layout_width="200dp"
            android:layout_height="150dp"
            android:scaleType="centerCrop"
            android:background="#F0F0F0"
            android:visibility="gone"
            tools:visibility="visible"/>
    </com.google.android.material.card.MaterialCardView>

    <TextView
        android:id="@+id/btnReplyItem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Responder"
        android:textStyle="bold"
        android:textColor="?android:attr/textColorSecondary"
        android:textSize="12sp"
        android:paddingVertical="12dp"
        android:paddingEnd="12dp"
        android:clickable="true"
        android:focusable="true"
        app:layout_constraintStart_toStartOf="@id/headerContainer"
        app:layout_constraintTop_toBottomOf="@id/cardCommentImage"/>

    <View
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:background="?android:attr/listDivider"
        android:alpha="0.5"
        app:layout_constraintStart_toStartOf="@id/headerContainer"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>